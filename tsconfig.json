{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
   "types": ["node"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",  // Set the baseUrl to "src"
    "paths": {
      "@/*": ["*"],             // Maps @/ to the root of src/
      "@core/*": ["core/*"],     // Maps @core/ to src/core/
      "@features/*": ["features/*"], // Maps @features/ to src/features/
      "@shared/*": ["shared/*"]  // Maps @shared/ to src/shared/
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
